{
  "manifest_version": 3,
  "name": "Shorts Detox",
  "version": "1.1",
  "description": "Reduce YouTube Shorts consumption",

  "permissions": ["storage", "tabs"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
