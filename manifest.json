{
  "manifest_version": 3,
  "name": "Shorts and Reels Detox",
  "version": "1.1",
  "description": "Reduce YouTube Shorts consumption",

  "permissions": ["storage", "tabs"],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
  "default_popup": "popup.html"
},


  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    },
    {
  "matches": ["*://www.instagram.com/*"],
  "js": ["instagramContent.js"],
  "run_at": "document_idle"
}

    
  ]
}
